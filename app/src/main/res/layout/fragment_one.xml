<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/deep_blue"
    tools:context=".presentation.ui.viewcontrollers.welcomescreens.onboarding.OnBoardingFragmentOne">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/community_image"
        android:layout_width="224dp"
        android:layout_height="206dp"
        android:maxHeight="30dp"
        android:src="@drawable/ic_ideas"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.298" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/community_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ideas"
        android:gravity="center"
        android:fontFamily="@font/convergence"
        android:textStyle="bold"
        android:textSize="20dp"
        android:padding="10dp"
        android:textColor="@color/white"
        android:maxEms="20"
        android:ems="10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/community_image"
        app:layout_constraintStart_toStartOf="@+id/community_image"
        app:layout_constraintTop_toBottomOf="@+id/community_image"
        app:layout_constraintVertical_bias="0.502" />

</androidx.constraintlayout.widget.ConstraintLayout>